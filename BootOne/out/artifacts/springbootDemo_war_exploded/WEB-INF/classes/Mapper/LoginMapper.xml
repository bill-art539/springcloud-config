<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bill.dao.LoginMapper">

    <!-- mapper的简单实现，切记 上面的namespace 改为自己的dao接口的位置-->
    <select id="login" resultType="com.bill.pojo.User" >
    select userid,username  from test where username = #{0}
</select>
</mapper>
